@{
    ViewData["Title"] = "PatReset";
    Layout = "";
}
@model Zencareservice.Models.Signup

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Patient Reset</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/my-login.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/jquery.validate.unobtrusive.min.js"></script>
</head>
<body class="my-login-page">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center align-items-center h-100">
                <div class="card-wrapper">
                    <div class="brand">
                        <img src="~/images/signin-zencare.png" alt="zencareservice_logo">
                    </div>
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">Reset Password</h4>
                            <form asp-action="PatReset" asp-controller="Account" method="post" id="resetPasswordForm">
                                <div class="form-group">
                                    <label asp-for="RPassword"></label>
                                    <input asp-for="RPassword" class="form-control" type="password" required />
                                    <span asp-validation-for="RPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CRPassword"></label>
                                    <input asp-for="CRPassword" class="form-control" type="password" required />
                                    <span asp-validation-for="CRPassword" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
                                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                            </form>
                        </div>
                    </div>
                    <div class="footer">
                        Copyright &copy; 2023 &mdash; Zencareservice
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $("#resetPasswordForm").validate();
        });
    </script>
</body>
</html>
